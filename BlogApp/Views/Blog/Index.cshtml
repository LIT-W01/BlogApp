@using BlogApp.Data;
@model BlogApp.Models.BlogsIndexViewModel


<h1 class="page-header">
    Page Heading
    <small>Secondary Text</small>
</h1>

<!-- First Blog Post -->
@foreach (Post p in Model.Posts)
{
    <h2>
        <a href="/blog/post?postId=@p.Id">@p.Title</a>
    </h2>
    <p class="lead">
        by <a href="#">LIT Master</a>
    </p>
    <p><span class="glyphicon glyphicon-time"></span> Posted on @p.Date.ToLongDateString()
    </p>
    <hr>
    <img class="img-responsive" src="http://placehold.it/900x300" alt="">
    <hr>
    <p>
        @Html.Raw(p.Text)
    </p>
    <a class="btn btn-primary" href="/blog/post?postId=@p.Id">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>

    <hr>
}

<!-- Pager -->
<ul class="pager">
    <li class="previous">
        <a href="#">&larr; Older</a>
    </li>
    <li class="next">
        <a href="#">Newer &rarr;</a>
    </li>
</ul>
